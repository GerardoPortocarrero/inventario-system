rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data;
    }

    function getRole() {
      return getUserData().rolId;
    }

    function getSedeId() {
      return getUserData().sedeId;
    }

    function isAdmin() {
      return isAuthenticated() && getRole() == 'admin';
    }

    function isSupervisor() {
      return isAuthenticated() && getRole() == 'supervisor';
    }

    function isPreventista() {
      return isAuthenticated() && getRole() == 'preventista';
    }

    function isAlmacenero() {
      return isAuthenticated() && getRole() == 'almacenero';
    }

    // --- Collection Rules ---

    // Master Data: Roles, Sedes, TiposBebida
    match /roles/{roleId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /sedes/{sedeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /tiposBebida/{tipoId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Catálogo Global de Productos
    match /productos/{productId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Usuarios: Información de perfil y asignación
    match /usuarios/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
      // Permitir que el usuario actualice algunos campos de su propio perfil si fuera necesario
      allow update: if request.auth.uid == userId && 
                    request.resource.data.rolId == resource.data.rolId &&
                    request.resource.data.sedeId == resource.data.sedeId;
    }

    // Inventario Consolidado (Controlador)
    match /inventario/{inventoryId} {
      // Lectura: Admin global, otros solo su sede
      allow read: if isAdmin() || (isAuthenticated() && resource.data.sedeId == getSedeId());
      
      // Escritura: Admin global, Almacenero solo su sede
      allow write: if isAdmin() || (isAlmacenero() && request.resource.data.sedeId == getSedeId());
    }

    // Unidades de Stock (Detalle físico)
    match /unidadesDeStock/{unitId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.sedeId == getSedeId());
      allow write: if isAdmin() || (isAlmacenero() && request.resource.data.sedeId == getSedeId());
    }

    // Órdenes de Pedido
    match /ordenes/{orderId} {
      // Lectura: 
      // - Admin/Supervisor: Toda la sede
      // - Preventista: Solo sus propias órdenes
      allow read: if isAdmin() || 
                  (isSupervisor() && resource.data.sedeId == getSedeId()) ||
                  (isPreventista() && resource.data.preventistaId == request.auth.uid);

      // Escritura: 
      // - Preventista: Crear y editar sus propias órdenes en su sede
      allow create: if isPreventista() && request.resource.data.sedeId == getSedeId() && 
                    request.resource.data.preventistaId == request.auth.uid;
      
      allow update: if isPreventista() && resource.data.preventistaId == request.auth.uid &&
                    resource.data.estadoOrden == 'PENDIENTE'; // Solo si sigue pendiente

      allow delete: if isAdmin();
    }
  }
}
